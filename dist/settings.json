{
  /* -------------------------------------------------------------------------- */
  /*                               FUNCTIONALITY                                */
  /* -------------------------------------------------------------------------- */

  /* ------------------------------ Sticky scroll ----------------------------- */
  "editor.stickyScroll.enabled": true,
  "workbench.tree.enableStickyScroll": true,
  "terminal.integrated.stickyScroll.enabled": true,

  /* --------------------------------- Preview -------------------------------- */
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.enablePreviewFromCodeNavigation": true,
  "editor.suggest.preview": true,

  /* ------------------------------- Suggestions ------------------------------ */
  "editor.snippetSuggestions": "inline",
  // "editor.quickSuggestions": {
  //   "other": "on",
  //   "strings": "off",
  //   "comments": "off"
  // },
  "editor.quickSuggestionsDelay": 50,

  "editor.tabCompletion": "on",
  "editor.inlineSuggest.showToolbar": "always",
  "editor.inlineSuggest.enabled": true,

  /* --------------------- File exclusion for performance --------------------- */

  // https://medium.com/@krtirtho/make-visual-studio-code-less-ram-consuming-faster-90db8c76a187
  "files.exclude": {
    "**/yarn.lock/**": true,
    "**/package-lock.json": true
    // "**/node_modules/**": true
  },

  "json.schemas": [
    {
      "exclude": ["node_modules"]
    }
  ],

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true
    // "**/env": true,
    // "**/venv": true
  },

  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true
    // "**/env/**": true,
    // "**/venv/**": true,
    // "env-*": true
  },

  /* -------------------------------- Explorer -------------------------------- */
  "explorer.compactFolders": false,
  "explorer.copyRelativePathSeparator": "/",

  "workbench.startupEditor": "none",
  "workbench.tree.indent": 20,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.tree.expandMode": "doubleClick",

  "explorer.confirmDragAndDrop": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  /* --------------------------------- Update --------------------------------- */
  "extensions.autoUpdate": false,
  "update.mode": "default",
  "update.showReleaseNotes": true,

  /* -------------------------------------------------------------------------- */
  /*                                 APPEARANCE                                 */
  /* -------------------------------------------------------------------------- */
  "vscode_custom_css.imports": [
    "file:///C:/Users/minht/OneDrive/Cloud Storage/Settings/VSCode/dist/temp-styles.css"
  ],

  /* -------------------------------- Title bar -------------------------------- */
  // "window.titleBarStyle": "custom",
  // "window.title": "${dirty}Hareki's Secret Lab",
  // "window.titleSeparator": " | ",
  "window.customTitleBarVisibility": "windowed",

  /* -------------------------------- Menu bar -------------------------------- */
  "window.customMenuBarAltFocus": false,
  "window.menuBarVisibility": "toggle",

  /* ---------------------------------- Font ---------------------------------- */
  "editor.fontLigatures": "'calt' on, 'liga' on, 'zero' off, 'ss02' off",
  "editor.fontSize": 14,
  "editor.fontWeight": 500,
  "editor.fontFamily": "'Maple Mono NF', Consolas, 'Courier New', monospace",

  "terminal.integrated.fontFamily": "Maple Mono NF",
  "terminal.integrated.fontWeight": "600",
  "terminal.integrated.fontSize": 14,

  "editor.lineHeight": 25,

  /* ---------------------------------- Theme --------------------------------- */
  "window.zoomLevel": 1.55,
  "workbench.iconTheme": "catppuccin-mocha",
  "workbench.colorTheme": "Catppuccin Mocha",

  "catppuccin.accentColor": "lavender",
  "catppuccin-icons.specificFolders": false,
  "catppuccin-icons.hidesExplorerArrows": true,
  // "symbols.hidesExplorerArrows": false,

  "workbench.colorCustomizations": {
    "[Catppuccin Mocha]": {
      "tab.activeBorderTop": "#0000",
      "tab.activeBorder": "#91b4fa",
      "editorBracketHighlight.foreground4": "#94e2d5",

      "menu.background": "#2A2A42",
      "quickInput.background": "#2A2A42",

      "terminalStickyScroll.background": "#2A2A42",
      "terminalStickyScrollHover.background": "#31324B",
      "terminalStickyScroll.border": "#0000",
      // "terminalStickyScroll.shadow": "#0000",

      "editorStickyScroll.background": "#2A2A42",
      "editorStickyScrollHover.background": "#31324B",
      "editorStickyScroll.shadow": "#0000",

      "panelStickyScroll.background": "#2A2A42",
      // "panelStickyScrollHover.background": "#31324B",
      "panelStickyScroll.shadow": "#0000",

      "sideBarStickyScroll.background": "#2A2A42",
      // "sideBarStickyScrollHover.background": "#31324B",
      "sideBarStickyScroll.shadow": "#0000",

      "editor.background": "#181825",
      "editorGutter.background": "#181825",
      "minimap.background": "#181825",
      "statusBar.background": "#181825",

      "sideBar.background": "#1e1e2e",
      "terminal.background": "#1e1e2e",
      "sideBarSectionHeader.background": "#1e1e2e",

      "panel.border": "#0000"
    }
  },

  "editor.tokenColorCustomizations": {
    "[*Light*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#000"
          }
        }
      ]
    },
    "[*Dark*]": {
      "textMateRules": [
        {
          "scope": "ref.matchtext",
          "settings": {
            "foreground": "#fff"
          }
        }
      ]
    },
    "textMateRules": []
  },

  "editor.mouseWheelScrollSensitivity": 2.5,
  "workbench.list.mouseWheelScrollSensitivity": 2.5,

  /* --------------------------------- Minimap -------------------------------- */
  "editor.minimap.side": "left",
  "editor.minimap.scale": 2,
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.minimap.maxColumn": 80,

  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,

  /* -------------------------------- Terminal -------------------------------- */
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.tabs.title": "${cwdFolder}",
  "terminal.integrated.tabs.description": "",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "path": "C:\\Program Files\\PowerShell\\7\\pwsh.exe",
      "args": ["-NoLogo"]
    }
  },
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.gpuAcceleration": "auto",
  "terminal.integrated.tabs.location": "left",
  "terminal.integrated.mouseWheelScrollSensitivity": 2.5,
  "terminal.integrated.tabs.enabled": false,

  /* ---------------------------------- Tabs ---------------------------------- */
  "workbench.editor.untitled.labelFormat": "name",
  "workbench.editor.customLabels.patterns": {
    "**/src/**/index.{ts,tsx,js,jsx}": "[I] | ${dirname}.${extname}"
  },
  "workbench.editor.labelFormat": "default",
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.closeEmptyGroups": true,
  "breadcrumbs.enabled": true,

  /* ------------------------------ Bracket pairs ----------------------------- */
  "editor.guides.bracketPairs": "active",
  "editor.guides.bracketPairsHorizontal": false,

